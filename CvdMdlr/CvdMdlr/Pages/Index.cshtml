@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<!--BODY-->
<div id="main-wrapper">
    <div class="wrapper style1">
        <h2 class="text-center">Graphs of Affected</h2>
        <p class="text-center">Groups: Tested negative, recovered, tested positive, hospitalized, death and total. Charts and tables are automatically updated daily.</p><br /><br />

        <div class="inner container">

            <div class=" text-center">

                <div class="cards row justify-content-md-center">

                    <div class="card vis1 col-12-small">
                        <div id="vis1"></div>
                    </div>
                    <div class="card vis2 col-12-small">
                        <div id="vis2"></div>
                    </div>
                    <div class="card vis3 col-12-small">
                        <div id="vis3"></div>
                    </div>
                    <div class="card vis4 col-12-small">
                        <div id="vis4"></div>
                    </div>
                    <div class="card vis5 col-12-small">
                        <div id="vis5"></div>
                    </div>
                    <div class="card vis6 col-12-small">
                        <div id="vis6"></div>
                    </div>
                </div>
            </div>
            <br />

            <br />

            <h2 class="text-center">Table of all Affected</h2>

            <table id="groupstable" class="table table-striped table-bordered nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>checkTimeEt</th>
                        <th>state/territory</th>
                        <th>negative</th>
                        <th>recovered</th>
                        <th>positive</th>
                        <th>hospitalized</th>
                        <th>death</th>
                        <th>total</th>
                    </tr>
                </thead>
            </table>
            <br />

            <br />
            <h2 class="text-center">Chart of all Affected</h2>

            <div style="width:100%;" id="visall"></div>
            <br />

            <br /><br />

            <br />
            <h2 class="text-center">State Resources</h2>
            <table id="infotable" class="table table-striped table-bordered nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>state</th>
                        <th>Current Website</th>
                        <th>Secondary Website</th>
                        <th>Twitter</th>
                    </tr>
                </thead>
            </table>
            <br />

            <br />
            <h2 class="text-center">SIR Model</h2>

            <div id="jxgbox" class="jxgbox" onmousedown="return false" style="width:100%; height:500px">
            </div>
            <br />

            <form>
                <input type="button" value="clear and run a simulation of 100 days" onclick="clearturtle();run()">
                <input type="button" value="stop" onclick="stop()">
                <input type="button" value="continue" onclick="goOn()">
            </form>
            <br />
            <p>
                <text>s: initially infected population rate (on load: I(0)=1.27E-6)</text><br>
                <text>&beta;: infection rate</text><br>
                <text>&gamma;: recovery rate = 1/(days of infection)</text><br>
                <text style="color:blue">* Blue: Rate of susceptible population</text><br>
                <text style="color:red">* Red: Rate of infected population</text><br>
                <text style="color:green">* Green: Rate of recovered population (which means: immune, isolated or dead)</text><br>
            </p>
        </div>
    </div>
</div>




